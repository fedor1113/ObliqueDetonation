// type    adaptive; // none, given, adaptive
type 	none;

adaptiveFrame
{
    direction           (1 0 0);
    fieldName           lambda;
    meanValue           0.8;
    valueFactor         10;     // for lambda - meanValue [m/s^2]
    derivativeFactor    50;     // for dotLambda [m/s]
}

givenFrame
{
    Urel
    {
        type coded;
        name exponentialRelaxation;

        code
        #{
            return 6.80947*vector(1 - exp(-2*x), 0, 0);
        #};
    }
}

